{
  "name": "reminder",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:vicente-valls/reminder.git",
  "author": "vicente-valls",
  "license": "UNLICENSED",
  "private": false,
  "engines": {
    "node": "8.10"
  },
  "scripts": {
    "test": "yarn tsc && yarn run test-swagger && yarn test-tslint && yarn run test-unit && yarn run test-integration",
    "test-tslint": "tslint \"./**/*.ts\" -e \"./node_modules/**/*\"",
    "test-swagger": "gulp validate-swagger",
    "test-unit": "ENVIRONMENT=test yarn mocha --opts tests/mocha.opts \"./tests/unit/**/*Spec.js\"",
    "start": "./node_modules/.bin/serverless offline -c --useSeparateProcesses --environment=environments/test.yml --apiKey=abcd start",
    "test-integration": "./node_modules/.bin/serverless offline -c --useSeparateProcesses --environment=environments/test.yml --apiKey=abcd start --exec='yarn mocha --opts tests/mocha.opts ./tests/integration/**/*.js'"
  },
  "dependencies": {
    "aws-lambda": "^0.1.2",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "express": "^4.16.4",
    "inversify": "^5.0.1",
    "inversify-binding-decorators": "^4.0.0",
    "inversify-express-utils": "^6.3.2",
    "reflect-metadata": "^0.1.12",
    "serverless-http": "^1.8.0"
  },
  "devDependencies": {
    "@types/express": "^4.11.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.11.7",
    "glob": "^7.1.3",
    "gulp": "^3.9.1",
    "gulp-swagger": "^1.0.1",
    "mocha": "^5.2.0",
    "mocha-testdata": "^1.2.0",
    "mocha-typescript": "^1.1.12",
    "serverless": "^1.35.1",
    "serverless-offline": "^3.31.3",
    "tslint": "^5.8.0",
    "typescript": "^3.2.2"
  }
}
